<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phamm.demoappbaothuc.MainActivity">


    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnDatGio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="92dp"
        android:layout_marginStart="22dp"
        android:text="HẸN GIỜ"
        android:onClick="onPlay"/>

    <Button
        android:id="@+id/btnDung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:text="DỪNG BÁO THỨC"
        android:layout_alignBaseline="@+id/btnDatGio"
        android:layout_alignBottom="@+id/btnDatGio"
        android:layout_alignParentEnd="true"
        android:onClick="onStop"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:text=""
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/btnDung"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
